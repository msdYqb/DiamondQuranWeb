<div class="modal fade" tabindex="-1" role="dialog" id="tafsirModal" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                @Html.DropDownList("TafsirsNames", Html.GetEnumSelectList(typeof(DiamondQuranWeb.SearchEngine.Enums.TafsirsNames)), null, new { id = "tafsir", @class = "form-control modal-title", style = "padding:0;width:auto", onchange = "changeTafsir(this.name,this.value)" })
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" style="position:relative;min-height:4rem;">
                <div id="spinner" class="spinner-border spinnerPopup" style="z-index:1; display:normal; margin: auto;position: absolute;top: 0; left: 0; bottom: 0; right: 0; width: 3rem; height: 3rem;" role="status" disabled>
                    <span class="sr-only">Loading...</span>
                </div>
                <div id="tafsirPopup">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">اغلاق</button>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" tabindex="-1" role="dialog" id="commentModal" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">تعليق</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="-body" style="position:relative;min-height:4rem;">
                <div id="spinner" class="spinner-border spinnerPopup" style="z-index:1; margin: auto;position: absolute;top: 0; left: 0; bottom: 0; right: 0; width: 3rem; height: 3rem;" role="status" disabled>
                    <span class="sr-only">Loading...</span>
                </div>
                <textarea id="commentText" style="width:100%;height:100%"></textarea>
            </div>
            <div class="modal-footer">
                <button type="submit" id="saveCommentBtn" class="btn btn-primary" onclick="saveComment(this.name);">حفظ</button>
                <button type="submit" id="deleteCommentBtn" class="btn btn-primary" onclick="deleteComment(this.name);">مسح</button>
                <button type="submit" class="btn btn-secondary" data-dismiss="modal">اغلاق</button>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" tabindex="-1" role="dialog" id="favoritesModal" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">المفضلة</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" style="position:relative;min-height:4rem;">
                <div id="spinner" class="spinner-border spinnerPopup" style=" z-index:1; margin: auto;position: absolute;top: 0; left: 0; bottom: 0; right: 0; width: 3rem; height: 3rem;" role="status" disabled>
                    <span class="sr-only">Loading...</span>
                </div>
                <table width="100%" class="display" id="favTable"></table>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-secondary" data-dismiss="modal">اغلاق</button>
            </div>
        </div>
    </div>
</div>
