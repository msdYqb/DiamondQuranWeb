<!DOCTYPE html>
<html>
<head>
    <base href="~/" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="google-site-verification" content="qDC4j0eyF9t43pzXssRaWlBWkyLwKpu0EwlRo1dSn08" />
    <link rel="icon" type="image/x-icon" href="~/Images/favicon.ico">
    <title>@ViewBag.Title</title>
    @RenderSection("description", required: false)
    <link rel="stylesheet" href="~/css/bootstrap.css">
    <link rel="stylesheet" href="~/css/jquery-ui.css">
    <link rel="stylesheet" href="~/css/datatables.min.css">
    <link rel="stylesheet" href="~/css/all.css">
    <link rel="stylesheet" href="~/css/keyboard.css">
    <link rel="stylesheet" href="~/css/site.css">
    @*<script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-4462588384550322"
    crossorigin="anonymous"></script>*@
    <script data-ad-client="ca-pub-4462588384550322" async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-JT7MW221BP"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() { dataLayer.push(arguments); }
        gtag('js', new Date());

        gtag('config', 'G-JT7MW221BP');
    </script>
    <environment names="Development">
    </environment>
</head>
<body style="display:flex; flex-direction:column;">
    <header id="layoutHeader" class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom box-shadow">
        <a class="my-0 mr-md-auto " href="~/">
            <img src="~/Images/diamondquran.png" style="width:50px;" />
        </a>
        <nav class="my-2 my-md-0 mr-md-3" style="direction: rtl;">
            <a class="p-2 text-dark" href="~/About">عن الموقع</a>
            <a class="p-2 text-dark" href="~/Guide">دليل الاستخدام</a>
            <a class="p-2 text-dark" href="~/Account/Bookmarks">المفضلة</a>
            <a class="p-2 text-dark" href="~/LogicsSearch">البحث المنطقي</a>
            <a class="p-2 text-dark" href="~/Main">البحث</a>
            <a class="p-2 text-dark" href="~/Quran">القران</a>
        </nav>
        @if (User.Identity.IsAuthenticated)
        {
            <button type="button" class="btn btn-outline-primary" data-toggle='popover' data-placement="bottom" data-html="true" data-content='<div class="card"><article class="card-body"><form action="/Account/Logout?returnUrl=/" class="form-horizontal" method="post" role="form">@(Html.AntiForgeryToken())<button type="submit" style="width:100%" class="float-right btn btn-outline-primary">تسجيل الخروج</from></button></article></div>'>@(User.Identity.Name)</button>
        }
        else
        {
            <a class="btn btn-outline-primary" href="~/Account/Login?returnUrl=@(Context.Request.Path)">تسجيل الدخول</a>
        }
    </header>

    <main id="main" role="main" class="container">
        @RenderBody()
    </main>

    <footer id="footer">
        <div class="container">
            <span wfd-id="1"></span>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="~/js/jquery-ui.min.js"></script>
    <script src="~/js/jquery.cookie.js"></script>
    <script src="~/js/keyboard.js"></script>
    <script src="~/js/datatables.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js"
            integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.0/js/bootstrap.min.js"></script>
    <script src="~/js/shared.js"></script>
    <environment names="Development">
    </environment>
    @RenderSection("scripts", required: false)
</body>
</html>